# SevaNet Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# SMS NOTIFICATIONS (TEXT.LK)
# =============================================================================
# Get this from your Text.lk dashboard (https://app.text.lk/)
TEXT_LK_API_TOKEN=your-text-lk-api-token
TEXT_LK_SENDER_ID=TextLKDemo

# Backup SMS service (Notify.lk - if configured)
NOTIFY_LK_USER_ID=your_notify_user_id
NOTIFY_LK_API_KEY=your_notify_api_key
NOTIFY_LK_SENDER_ID=your_sender_id

# =============================================================================
# EMAIL NOTIFICATIONS (RESEND)
# =============================================================================
# Get this from your Resend dashboard (https://resend.com/api-keys)
RESEND_API_KEY=your-resend-api-key

# =============================================================================
# AI INTEGRATION (GOOGLE GEMINI) - For Backend
# =============================================================================
# Get this from Google AI Studio (https://makersuite.google.com/app/apikey)
GOOGLE_API_KEY=your-google-gemini-api-key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Base URL for the application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment (development, staging, production)
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION (Optional - if using direct connection)
# =============================================================================
DATABASE_URL=your_database_url
POSTGRES_PASSWORD=your_postgres_password

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode
DEBUG=true

# API Rate limiting (requests per minute)
API_RATE_LIMIT=100

# Maximum file upload size (in bytes)
MAX_FILE_SIZE=5242880

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT expiration time
JWT_EXPIRES_IN=24h

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Default sender name for notifications
NOTIFICATION_SENDER_NAME=SevaNet

# Email from address
EMAIL_FROM_ADDRESS=noreply@sevanet.gov.lk

# SMS sender ID
SMS_SENDER_ID=SevaNet

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_AI_ANALYSIS=true
ENABLE_ANALYTICS=true